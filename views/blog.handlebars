<div class="container">
   
    <div class="blog" style="width: 18rem;">
        <a href="/blogs/{{blog.id}}">
            <div class="card-body">
                <h5 class="card-title">{{blog.title}}</h5><span>By: {{blog.user_id}}</span>
                
                <p class="card-text">{{blog.content}}</p>
                
                <div class="comments">
                    {{#each blog.comments as |comment|}}
                        {{> comment-details}}
                    {{/each}}
                </div>

                {{#if loggedIn}}
                <a href="/api/comments/{{blog.id}}" class="card-link">Add a comment</a>
                {{/if}}
            </div>
        </a>
    </div>
  
</div>
